def logger(x){
    def _logger(fn){
        def wrapper(*args, **kwargs){
            print('before', *args)
            preTime = time()
            ret = fn(*args, **kwargs)
            afterTime = time()
            print('end ', ret)
            if(afterTime - preTime > 2000){
                print(fn , 'è¶…æ—¶')
            }
            return ret
        }
        return wrapper
    }
    return _logger
}


